<div class="container">
  <div class="row  justify-content-center">
    <h3>What's on your mind ?</h3>
  </div>


  <div class="container">
     <div class="row">
        <% @cocktails.each do |c| %>
        <div class="col-4 mb-3">
          <%= link_to cocktail_path(c), class: "text-decoration-none" do %>
          <div class="card-image grow" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path c.photo.key, height: 180, crop: :fill %>)">
            <%= c.name %>
          </div>
          <% end %>
        </div>
        <% end %>
     </div>
  </div>
</div>


